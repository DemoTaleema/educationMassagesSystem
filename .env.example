# Education Messages System Environment Configuration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/taleema_education_messages

# Server Configuration  
PORT=3008
NODE_ENV=development

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3010,http://localhost:3000,https://taleema.vercel.app,https://admin.taleema.se

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your_jwt_secret_here_for_future_auth
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# Email Configuration (for future email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/education-messages.log

# Admin Configuration
ADMIN_API_KEY=your_admin_api_key_here

# Production overrides (uncomment for production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/taleema_education_messages
# NODE_ENV=production
# PORT=3008